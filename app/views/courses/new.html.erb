<%= form_for Course.new do |f| %>
    <%= f.label :name, 'Nome do Curso' %>
    <%= f.text_field :name %>
    <%= f.label :description, 'Descrição' %>
    <%= f.text_area :description %>
    <%= f.label :code, 'Código' %>
    <%= f.text_field :code %>
    <%= f.label :price, 'Preço' %>
    <%= f.text_field :price %>
    <%= f.label :enrollment_deadline, 'Data limite de matrícula' %>
    <%= f.date_field :enrollment_deadline %>
    <%= f.submit 'Criar curso' %>
<% end %>

<p><%= link_to "Voltar", courses_path %></p>